<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
    <h2> For <%= @order.email %></h2>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order! Order summary:</h4>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
    <tbody>
      <% @order.line_items.each do |item| %>
        <%= render '/orders/line_item', product: item.product, quantity: item.quantity.to_i, item_price: item.item_price, total_price: item[:total_price] %>
      <% end %>
    </tbody>
    <tfoot>
          <tr>
          <th colspan="4">
          TOTAL:
          </th>
          <th>
           $<%= @order.total %>
          </th>
          </tr>
          </tfoot>
    </table>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
